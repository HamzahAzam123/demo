@page
@model IndexModel
@{
    ViewData["Title"] = "To-Do";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <h1 class="mb-4">To-Do</h1>

        <!-- REPLACE THE OLD INPUT GROUP WITH THIS FORM -->
        <form method="post" class="input-group mb-3">
            <input id="todo-input" type="text" class="form-control" placeholder="Add a new task..."
                   aria-label="Add a new task" asp-for="NewTask">
            <button id="add-todo-btn" class="btn btn-primary" type="submit" asp-page-handler="Add">Add</button>
        </form>

        <ul id="todo-list" class="list-group">
            @foreach (var todo in Model.Todos)
            {
                <li class="list-group-item">@todo</li>
            }
        </ul>

        <div class="d-flex justify-content-between align-items-center mt-3">
            <small id="todo-summary" class="text-body-secondary"></small>
            <div>
                <button id="clear-completed-btn" class="btn btn-outline-secondary btn-sm">Clear completed</button>
                <button id="clear-all-btn" class="btn btn-outline-danger btn-sm ms-2">Clear all</button>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/js/todo.js" asp-append-version="true"></script>
}
